<?xml version="1.0" encoding="UTF-8"?>
<arboles>
    <arbol>
        <nombre_cientifico>Acer monspessulanum</nombre_cientifico>
        <nombre_comun>Arce de Montpellier, Arce menor</nombre_comun>
        <vegetacion>Caducifolio</vegetacion>
        <altura>de 6 a 10 metros</altura>
        <forma_y_estructura>
            Copa esférica. Troco principal recto con bifurcaciones. Ramaje colgante
        </forma_y_estructura>
        <color_en_primavera>
            Haz verde brillante, envés verde blanquecino
        </color_en_primavera>
        <resistencia_a_las_heladas>
            Heladas fuertes (hasta -15ºC)
        </resistencia_a_las_heladas>
    </arbol>
    <arbol>
        <nombre_cientifico>Olea europea</nombre_cientifico>
        <nombre_comun>Olivo</nombre_comun>
        <vegetacion>Perenne</vegetacion>
        <altura>de 8 a 15 metros</altura>
        <forma_y_estructura>
            Copa irregular. Tronco principal irregular con bifurcaciones. Ramaje tortuoso
        </forma_y_estructura>
        <color_en_primavera>
            Haz verde oscuro, envés verde plateado
        </color_en_primavera>
        <resistencia_a_las_heladas>
            Heladas medias (hasta -10ºC)
        </resistencia_a_las_heladas>
    </arbol>
    <arbol>
        <nombre_cientifico>Platanus orientalis</nombre_cientifico>
        <nombre_comun>Platano</nombre_comun>
        <vegetacion>Caducifolio</vegetacion>
        <altura>de 20 a 25 metros</altura>
        <forma_y_estructura>
            Copa ovoidal. Tronco principal recto. Ramaje expandido
        </forma_y_estructura>
        <color_en_primavera>
            Haz verde medio, envés verde claro
        </color_en_primavera>
        <resistencia_a_las_heladas>
            Heladas fuertes (hasta -20ºC)
        </resistencia_a_las_heladas>
    </arbol>
    <arbol>
        <nombre_cientifico>Quercus ilex</nombre_cientifico>
        <nombre_comun>Encina</nombre_comun>
        <vegetacion>Perenne</vegetacion>
        <altura>en torno a 25 metros</altura>
        <forma_y_estructura>
            Copa esférica o elíptica irregular. Tronco principal recto. Ramaje tortuoso
        </forma_y_estructura>
        <color_en_primavera>
            Plateado en hojas jóvenes. En hojas antiguas, haz verde oscuro, envés plateado
        </color_en_primavera>
        <resistencia_a_las_heladas>
            Heladas fuertes (hasta -15ºC)
        </resistencia_a_las_heladas>
    </arbol>
</arboles>